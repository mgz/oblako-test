<!-- Portfolio Item <%= portfolio_item.idx %> -->
<div class="col-md-6 col-lg-4">
  <div class="portfolio-item mx-auto" data-toggle="modal" data-target="#portfolioModal<%= portfolio_item.idx %>">
    <div class="portfolio-item-caption d-flex align-items-center justify-content-center h-100 w-100">
      <div class="portfolio-item-caption-content text-center text-white">
        <i class="fas fa-plus fa-3x"></i>
      </div>
    </div>
    <%= image_tag "freelancer_theme/portfolio/#{portfolio_item.image_filename}", class: 'img-fluid' %>
  </div>
</div>